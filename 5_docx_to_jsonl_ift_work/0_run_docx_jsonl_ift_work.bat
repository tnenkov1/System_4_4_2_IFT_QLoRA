    echo Стартиране на %SCRIPT_NAME%...
    python "%SCRIPT_NAME%"
) else (
    echo ГРЕШКА: Скриптът "%SCRIPT_NAME%" не е намерен в тази папка!
    echo Текуща директория: %cd%
)

echo.
echo Процесът завърши.
pause